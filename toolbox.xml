<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category id="robotics" name="ROBOTICS" colour="#ff4ccd" icon="robot">
    <label text="Động cơ" web-class="blockLabelStyle"></label>
    <block type="robotics_motori2c_init" />
    <block type="robotics_motor2p_init" />
    <block type="robotics_motor3p_init" />
    <block type="robotics_motor_move">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">70</field>
        </shadow>
      </value>
    </block>

    <sep gap="30"></sep>
    <label text="Robot" web-class="blockLabelStyle"></label>
    <block type="robotics_robot2wd_init" />
    <block type="robotics_robot4wd_init" />
    <block type="robotics_robotmecanum_init" />

    <block type="robotics_robot_move" >
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">70</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_robot_move_delay">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">70</field>
        </shadow>
      </value>
      <value name="time">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_robot_turn" >
      <value name="ratio">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">70</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_robot_turn_delay">
      <value name="ratio">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">70</field>
        </shadow>
      </value>
      <value name="amount">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_robot_stop" />

    <sep gap="30"></sep>
    <label text="Cảm biến góc" web-class="blockLabelStyle"></label>
    <block type="robotics_angle_sensor_init">
      <value name="samples">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_angle_sensor_get" />
    <block type="robotics_angle_sensor_get_imu" />
  </category>

  <category id="robotics-more" name="More" colour="#ff4ccd" icon="ellipsis-h">
    <label text="Điều khiển từ xa" web-class="blockLabelStyle"></label>
    <block type="robotics_remote_control_init"/>
    <block type="robotics_remote_control_on_button" />
    
    <sep gap="30"></sep>
    <label text="Robot dò line" web-class="blockLabelStyle"></label>
    <block type="robotics_line_sensor_i2c_init" />
    <block type="robotics_line_sensor_digital_init" />
    <block type="robotics_follow_line_until_cross">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_turn_until_line_detected_then">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_follow_line_until_end">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>
    <block type="robotics_follow_line_until">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="condition"></value>
    </block>
  </category>
</xml>